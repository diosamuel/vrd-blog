---
layout: default
---
<article class="max-w-5xl mx-auto text-black">
    <header class="mb-14">
        <div class="max-w-md mx-auto">
            <h1 class="text-4xl text-center font-bold leading-normal text-black-900 mt-0 mb-3 " style="font-family: 'Playfair Display', serif;">{{ title }}</h1>
        </div>
        <div class="text-center text-black-100">Published on {{ page.date | readableDate }}</div>
        {% if tags %}
        <div class="mt-3 text-center">
            {% for tag in tags %}
            <a href="{{ '/tags/' | url }}{{ tag }}" class="inline-block px-3 py-1 text-sm font-medium m-0.5 border-b">#{{ tag }}</a>
            {% endfor %}
        </div>
        {% endif %}
        {% if thumb %}
        <div class="mt-10 mx-7 md:mx-0 text-center">
            {# <img class="w-full max-w-2xl mx-auto" src="{{ thumb | url }}" width="960" height="500" alt="This post thumbnail"> #}
{#             {% if license %}
                <div class="mt-5">
                    <a class="opacity-80" href="{{ license_url }}">{{ license }}</a>
                </div>
            {% endif %} #}
        </div>
        {% endif %}
    </header>
    <div id="content" class="prose text-black max-w-none">
        {{ content | safe }}
    </div>
    {% if site.disqusShortname %}
    <div class="mt-10">
        {% if process.environment === "production" %}
        {% include "partials/disqus.njk" %}
        {% else %}
        <div class="italic text-black-700">Disqus comments only available for production</div>
        {% endif %}
    </div>
    {% endif %}
</article>