{%- set lazyImage = "data:image/svg+xml,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%201%201'%20height%3D'500'%20width%3D'960'%20style%3D'background-color%3Argb(203%2C213%2C224)'%2F%3E" -%}
{% for post in paged.posts %}
<div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2">
    <div class="h-full bg-white border border-black">
        <a href="{{ post.url | url }}">
            <img class="filter brightness-50 w-full m-0 lazy hover:opacity-75 transition-opacity object-cover h-80 transform filter blur-lg" src="{{ lazyImage }}" data-src="{% if post.data.thumb %}{{ post.data.thumb | url }}{% else %}{{ '/assets/img/no-image.svg' | url }}{% endif %}" width="960" alt="This post thumbnail">
        </a>
        <div class="px-6 py-5">
            <div class="flex mb-2">
            {% for tag in post.data.tags %}
                <a href="http://localhost:8080/tags/{{ tag }}/" class="text-sm px-2 p-1">#{{ tag }}</a>
            {% endfor %}
            </div>
            <div class="font-semibold text-xl mb-2">
                <a class="text-black hover:underline transition delay-150 duration-300 ease-in-out" href="{{ post.url | url }}">{{ post.data.title }}</a>
            </div>
            <p class="text-gray-700" title="Published date">{{ post.data.page.date | readableDate }}</p>
        </div>
    </div>
</div>
{% endfor %}